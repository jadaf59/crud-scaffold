"use server"

import { revalidateTag } from "next/cache"
import { db } from "@/lib/db/drizzle"
import { type {{entity.name}} } from "@/lib/db/schema/{{lowercase entity.pluralName}}"
import { takeFirstOrThrow } from "@/lib/db/utils"
import { eq, inArray } from "drizzle-orm"
import { customAlphabet } from "nanoid"

import { getErrorMessage } from "@/lib/handle-error"
import { 
  type Create{{entity.name}}Schema,
  type Update{{entity.name}}Schema,
  create{{entity.name}}Schema,
  update{{entity.name}}Schema,
} from "./validations"

const nanoid = customAlphabet("1234567890abcdefghijklmnopqrstuvwxyz", 10)

export async function get{{entity.name}}(input: { id: {{entity.name}}["id"] }) {
  try {
    const result = await db.query.{{lowercase entity.name}}.findFirst({
      where: eq({{lowercase entity.name}}.id, input.id),
    })

    if (!result) {
      return {
        data: null,
        error: "{{entity.name}} not found",
      }
    }

    return {
      data: result,
      error: null,
    }
  } catch (err) {
    return {
      data: null,
      error: getErrorMessage(err),
    }
  }
}

export async function create{{entity.name}}(input: Create{{entity.name}}Schema) {
  try {
    const validatedInput = create{{entity.name}}Schema.parse(input)

    const result = await db
      .insert({{lowercase entity.name}})
      .values({
        id: nanoid(),
        {{#each entity.fields}}
        {{#unless (eq name "id")}}
        {{#unless (eq name "createdAt")}}
        {{name}}: validatedInput.{{name}},
        {{/unless}}
        {{/unless}}
        {{/each}}
        createdAt: new Date(),
      })
      .returning()

    const {{lowercase entity.name}} = takeFirstOrThrow(result)

    revalidateTag("{{lowercase entity.name}}")
    {{#each entity.fields}}
    {{#if isEnum}}
    revalidateTag("{{lowercase ../entity.name}}-{{name}}-counts")
    {{/if}}
    {{/each}}

    return {
      data: {{lowercase entity.name}},
      error: null,
    }
  } catch (err) {
    return {
      data: null,
      error: getErrorMessage(err),
    }
  }
}

